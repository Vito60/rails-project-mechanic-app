<!DOCTYPE html>
<html>
  <head>
    <title>RailsProjectMechanicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


  <link href="https://blackrockdigital.github.io/startbootstrap-grayscale/css/grayscale.min.css" rel="stylesheet">

  </head>

  <body>
  
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="/">Mechanic App</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <% if !user_signed_in? %>
        <%= link_to "Login", new_user_session_path %>
    <% else %>
        <%= link_to "YOUR VEHICLES", user_vehicles_path(current_user) %>
    <% end %>
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
          <button>
          <% if !user_signed_in? %>
          <%= link_to "Login", new_user_session_path %>
          <% else %>
          <%= link_to "YOUR VEHICLES", user_vehicles_path(current_user) %>
          <% end %>
          </button>
          </li>
        </ul>
      </div>
    </div>
  </nav>
    <%= yield %>


  </body>
    <footer class="bg-black small text-center text-white-50">
    <div class="container">
    MECHANIC APP
    <br>
      <%if user_signed_in?%>
      <%= link_to 'Edit Your Account', edit_user_registration_path%>
      <br>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      <% end %>
    </div>
  </footer>
</html>
